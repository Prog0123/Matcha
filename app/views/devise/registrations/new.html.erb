<%# 新規登録画面 daisyUI適用 %>
<div class="max-w-md mx-auto mt-10 bg-white p-8 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold text-center mb-6">アカウント登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- ユーザー名 -->
    <div class="form-control mb-4">
      <%= f.label :name, "ユーザー名", class: "label label-text font-semibold" %>
      <%= f.text_field :name, autocomplete: "name", class: "input input-bordered w-full" %>
    </div>

    <!-- メール -->
    <div class="form-control mb-4">
      <%= f.label :email, "メールアドレス", class: "label label-text font-semibold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
    </div>

    <!-- パスワード -->
    <div class="form-control mb-4">
      <%= f.label :password, "パスワード", class: "label label-text font-semibold" %>
      <% if @minimum_password_length %>
        <div class="text-sm text-gray-500 mb-1">
          <%= @minimum_password_length %>文字以上で入力してください
        </div>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
    </div>

    <!-- パスワード確認 -->
    <div class="form-control mb-6">
      <%= f.label :password_confirmation, "パスワード（確認）", class: "label label-text font-semibold" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
    </div>

    <!-- 登録ボタン -->
    <div class="form-control">
    <%= f.submit "アカウント登録", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
  <!-- ログインリンク -->
  <div class="mt-6 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
