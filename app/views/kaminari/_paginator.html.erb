<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do %>
  <nav>
    <ul class="flex space-x-1">

      <%# 前のページ < %>
      <% if current_page.first? %>
        <li>
          <span class="btn btn-sm btn-disabled">&lt;</span>
        </li>
      <% else %>
        <li>
          <%= link_to "<", url_for(page: current_page.number - 1), class: "btn btn-sm" %>
        </li>
      <% end %>

      <%# ページ番号 %>
      <% each_page do |page| %>
        <% if page.display_tag? %>
          <% if page.current? %>
            <li>
              <span class="btn btn-sm btn-active"><%= page.number %></span>
            </li>
          <% else %>
            <li>
              <%= link_to page.number, url_for(page: page.number), class: "btn btn-sm" %>
            </li>
          <% end %>
        <% elsif !page.was_truncated? %>
          <li>
            <span class="btn btn-sm btn-disabled">…</span>
          </li>
        <% end %>
      <% end %>

      <%# 次のページ > %>
      <% if current_page.last? %>
        <li>
          <span class="btn btn-sm btn-disabled">&gt;</span>
        </li>
      <% else %>
        <li>
          <%= link_to ">", url_for(page: current_page.number + 1), class: "btn btn-sm" %>
        </li>
      <% end %>

    </ul>
  </nav>
<% end %>
