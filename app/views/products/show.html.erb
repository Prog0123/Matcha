<!-- 詳細ページ -->
<div class="container mx-auto p-4 space-y-6">

  <!-- 商品情報 -->
  <h1 class="text-2xl font-bold">商品詳細</h1>
  <div class="card bg-base-100 shadow p-4">

    <% if user_signed_in? && @product.user == current_user %>
      <div class="absolute top-4 right-4 flex space-x-2">
        <%= link_to "編集", edit_product_path(@product), class: "btn btn-sm btn-outline btn-primary" %>
        <%= link_to "削除", product_path(@product), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-outline btn-error" %>
      </div>
    <% end %>

    <h1 class="text-3xl font-bold mb-4"><%= @product.name %></h1>
    <p class="text-gray-600 mb-2">カテゴリ: <%= @product.category.titleize %></p>
    <% if @product.image.attached? %>
      <%= image_tag @product.image, class: "w-full max-w-md object-cover mb-4" %>
    <% end %>

    <% if @product.tags.present? %>
      <p class="text-gray-600 mb-2">
        タグ:
        <% @product.tags.each do |tag| %>
          <span class="badge badge-outline mr-1"><%= tag.name %></span>
        <% end %>
      </p>
    <% end %>

  <!-- レビュー情報 -->
    <% if @review.present? %>
      <!-- 濃さ表示 -->
      <div class="mb-4">
        <h3 class="text-lg font-semibold mb-2">濃さ</h3>
        <div class="flex items-center space-x-2">
          <div class="flex">
            <% @review.richness.to_i.times do %>
              <span class="text-green-600 text-xl">🍵</span>
            <% end %>
          </div>
          <span class="text-lg font-bold"><%= @review.richness.to_i %>/5</span>
        </div>
      </div>

      <!-- 総合評価 -->
      <div class="mb-4">
        <h3 class="text-lg font-semibold mb-2">総合評価</h3>
        <% if @average_score.present? %>
          <div class="flex items-center space-x-2">
            <div class="flex">
              <% 5.times do |i| %>
                <% if i < @average_score.round %>
                  <span class="text-green-600 text-xl">★</span>
                <% else %>
                  <span class="text-gray-300 text-xl">★</span>
              <% end %>
            <% end %>
          </div>
          <span class="text-lg font-bold"><%= @average_score %>/5.0</span>
        </div>
      <% else %>
        <p class="text-gray-500">まだ評価がありません。</p>
      <% end %>
    </div>

      <!-- 本文 -->
      <% if @review.comment.present? %>
        <div class="mb-4">
          <h3 class="text-lg font-semibold mb-2">本文</h3>
          <div class="bg-gray-50 p-4 rounded">
            <p><%= @review.comment %></p>
          </div>
        </div>
      <% end %>

    <% else %>
      <p class="text-gray-500">まだレビューはありません。</p>
    <% end %>
  </div>

  <!-- コメント一覧 -->
  <div class="card bg-base-100 shadow p-4">
    <h2 class="text-2xl font-semibold mb-4">コメント</h2>
    <p class="text-gray-500">まだコメントはありません。</p>
  </div>

  <!-- 戻るボタン -->
  <div>
    <%= link_to "商品一覧に戻る", products_path, class: "btn btn-outline" %>
  </div>

</div>
