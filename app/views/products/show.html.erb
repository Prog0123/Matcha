<div class="container mx-auto p-4 space-y-6">

  <!-- 商品情報 -->
  <h1 class="text-2xl font-bold">商品詳細</h1>
  <div class="card bg-base-100 shadow p-4">
    <h1 class="text-3xl font-bold mb-4"><%= @product.name %></h1>
    <p class="text-gray-600 mb-2">カテゴリ: <%= @product.category.titleize %></p>
    <% if @product.image.attached? %>
      <%= image_tag @product.image, class: "w-full max-w-md object-cover mb-4" %>
    <% end %>
  </div>

  <!-- コメント一覧 -->
  <div>
    <h2 class="text-2xl font-semibold mb-4">コメント</h2>

    <% if @reviews.blank? %>
      <p class="text-gray-500">まだコメントはありません。</p>
    <% end %>
  </div>

</div>
